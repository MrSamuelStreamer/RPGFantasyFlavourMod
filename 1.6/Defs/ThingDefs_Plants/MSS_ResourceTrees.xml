<Defs>
    <ThingDef ParentName="TreeBase">
        <defName>MSS_GoldTree</defName>
        <label>Gold Tree</label>
        <description>A large, majestic tree that can be eventually cultivated for a meagre amount of usable gold leaf.</description>
        <graphicData>
            <texPath>Things/Plant/MSS_GoldTree</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Beauty>4</Beauty>
        </statBases>
        <plant>
            <sowMinSkill>15</sowMinSkill>
            <sowResearchPrerequisites>
                <li>MSS_Resource_tree</li>
            </sowResearchPrerequisites>
            <growDays>25</growDays>
            <harvestedThingDef>Gold</harvestedThingDef>
            <harvestYield>15</harvestYield>
            <choppedThingDef>ChoppedStump</choppedThingDef>
            <smashedThingDef>SmashedStump</smashedThingDef>
            <visualSizeRange>1.0~2.0</visualSizeRange>
            <immatureGraphicPath>Things/Plant/MSS_GoldTreeImm</immatureGraphicPath>
            <mustBeWildToSow>false</mustBeWildToSow>
        </plant>
    </ThingDef>

