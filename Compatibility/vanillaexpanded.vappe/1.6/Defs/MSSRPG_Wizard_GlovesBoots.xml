<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="ApparelMakeableBase" MayRequire="vanillaexpanded.vpsycastse">
    <defName>MSSRPG_WizardBoots</defName>
    <label>Seer's Boots</label>
    <description>A pair of leather boots enchanted during construction to magically ground the wearer and attune them to planetary arcane forces.</description>
    <graphicData>
      <texPath>Things/Footwear/Boots</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <costList>
      <VPE_Eltex MayRequire="vanillaexpanded.vpsycastse">2</VPE_Eltex>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1600</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.4</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.0</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.1</MoveSpeed>
      <PsychicSensitivityOffset>0.03</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>0.03</PsychicEntropyRecoveryRate>
    </equippedStatOffsets>
    <thingCategories Inherit="False">
      <li>VAE_BootsAndGloves</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Feet</li>
      </bodyPartGroups>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier2</li>
        <li>RoyalTier3</li>
        <li>RoyalTier4</li>
        <li>RoyalTier5</li>
        <li>RoyalTier6</li>
        <li>RoyalTier7</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite Inherit="False" IsNull="True" />
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <displayPriority>290</displayPriority>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

